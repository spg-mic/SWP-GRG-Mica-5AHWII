{
    "tasks": {
        "dev": "deno run --watch  main.ts",
        "prisma:studio": "deno run -A npm:prisma@latest studio --hostname 0.0.0.0",
        "prisma:seed": "deno run -A --env-file seed.ts",
        "prisma:debug_seed": "deno run -A --env-file --inspect-wait seed.ts",
        "prisma:migrate_dev": "deno run -A npm:prisma@latest migrate dev",
        "prisma:db_push": "deno run -A npm:prisma@latest db push",
        "prisma:generate": "deno run -A npm:prisma@latest generate",
        "prisma:validate": "deno run -A npm:prisma@latest validate"
    },
    "imports": {
        "@prisma/client": "npm:@prisma/client@^6.16.2",
        "@std/assert": "jsr:@std/assert@1",
        "he": "npm:he@^1.2.0"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 130,
        "singleQuote": false,
        "proseWrap": "never"
    }
}
